root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,vue,css,scss,json}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.blade.php]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[{package.json,composer.json}]
indent_size = 2

[docker-compose.yml]
indent_size = 4
